# ==========================================
# ТРАНСНЕФТЬ AI КОНСУЛЬТАНТ - КОНФИГУРАЦИЯ
# ==========================================

# ============================================
# LLM НАСТРОЙКИ
# ============================================

# Модель LLM
# LLM_MODEL=IlyaGusev/saiga_llama3_7b.Q4_K_M
# Температура генерации (0.0-1.0)
# 0.0 = детерминированные ответы
# 1.0 = креативные ответы
LLM_TEMPERATURE=0.3

# Максимальное количество токенов в ответе
LLM_MAX_TOKENS=1024

# ============================================
# EMBEDDINGS (ВЕКТОРНЫЕ ПРЕДСТАВЛЕНИЯ)
# ============================================

# Модель для создания embeddings
# BAAI/bge-m3 - многоязычная модель (рус+eng)
EMBEDDING_MODEL=BAAI/bge-m3

# Устройство: cpu | cuda
# cuda - если есть NVIDIA GPU
EMBEDDING_DEVICE=cpu

# ============================================
# VECTOR STORE (ChromaDB)
# ============================================

# Путь к базе данных ChromaDB
CHROMA_PATH=db/chroma

# Название коллекции документов
COLLECTION_NAME=transneft_docs

# ============================================
# RAG НАСТРОЙКИ
# ============================================

# Количество документов для retriever (top-k)
TOP_K_RETRIEVER=5

# Коэффициент гибридного поиска (0.0-1.0)
# 0.0 = только BM25 (keyword search)
# 1.0 = только vector search
# 0.5 = гибридный (50/50)
HYBRID_SEARCH_ALPHA=0.5

# Минимальный порог релевантности (0.0-1.0)
MIN_RELEVANCE_SCORE=0.3

# ============================================
# SPEECH-TO-TEXT (STT)
# ============================================

# Модель STT: whisper | vosk
STT_MODEL=whisper

# Размер модели Whisper: tiny | base | small | medium | large
# tiny - быстро, но менее точно
# base - оптимальный баланс
# large - максимальная точность, но медленно
STT_MODEL_SIZE=base

# Язык распознавания
STT_LANGUAGE=ru

# ============================================
# TEXT-TO-SPEECH (TTS)
# ============================================

# Модель TTS: silero
TTS_MODEL=silero

# Голос: aidar | baya | kseniya | xenia
# xenia - женский голос (рекомендуется)
TTS_SPEAKER=xenia

# Частота дискретизации (Hz)
TTS_SAMPLE_RATE=48000

# ============================================
# SERVER SETTINGS
# ============================================

# Хост (0.0.0.0 = доступен извне)
HOST=0.0.0.0

# Порт
PORT=8000

# Режим разработки (авто-перезагрузка)
RELOAD=False

# ============================================
# LOGGING
# ============================================

# Уровень логирования: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=rag_demo.log

# ============================================
# BENCHMARK & EVALUATION
# ============================================

# Количество вопросов для бенчмарка
BENCHMARK_SIZE=100

# Количество негативных примеров
NEGATIVE_SAMPLES=20

# ============================================
# CORS (для фронтенда)
# ============================================

# Разрешённые origins (через запятую)
# * = все домены (только для разработки!)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ============================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================

# Максимальный размер загружаемого файла (MB)
MAX_UPLOAD_SIZE=50

# Timeout для LLM запросов (секунды)
LLM_TIMEOUT=30

# Кеширование embeddings
CACHE_EMBEDDINGS=True
